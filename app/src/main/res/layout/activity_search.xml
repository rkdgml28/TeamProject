<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="10">

        <ImageView
            android:id="@+id/search_change"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_change" />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="6">

            <EditText
                android:id="@+id/edit_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="출발지 입력"/>
            <EditText
                android:id="@+id/edit_stopover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="경유지 입력"/>
            <EditText
                android:id="@+id/edit_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="도착지 입력"/>
        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_search"
            app:layout_constraintLeft_toRightOf="@+id/layout_search" />
    </LinearLayout>
    
    <View
        android:id="@+id/block1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_search"
        android:background="@color/teal_200"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inform"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/block1" >
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_test_route"
            android:text="소요시간: "/>
        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_time"
            android:text="비용: " />
        <TextView
            android:id="@+id/tv_transfer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_cost"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="환승횟수: "  />
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_transfer"
            app:layout_constraintLeft_toLeftOf="@+id/layout_btnMin"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="현재시간: "  />
        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_start"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="예상 도착시간: "  />
<!--아래로는 변경될 값-->
        <TextView
            android:id="@+id/auto_time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/tv_time"
            app:layout_constraintTop_toTopOf="@+id/tv_time"
            app:layout_constraintBottom_toBottomOf="@+id/tv_time"
            android:text="소요시간 입니다."/>

        <TextView
            android:id="@+id/auto_cost"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="10dp"
            android:text="비용 입니다"
            app:layout_constraintLeft_toRightOf="@id/tv_cost"
            app:layout_constraintTop_toTopOf="@id/tv_cost"
            app:layout_constraintBottom_toBottomOf="@id/tv_cost"/>

        <TextView
            android:id="@+id/auto_transfer"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_transfer"
            app:layout_constraintBottom_toBottomOf="@+id/tv_transfer"
            app:layout_constraintLeft_toRightOf="@id/tv_transfer"
            android:text="환승횟수 입니다"/>
        <TextView
            android:id="@+id/auto_start"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@+id/tv_start"
            app:layout_constraintBottom_toBottomOf="@+id/tv_start"
            app:layout_constraintLeft_toRightOf="@id/tv_start"
            android:text="현재시간 입니다"/>

        <TextView
            android:id="@+id/auto_finish"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_finish"
            app:layout_constraintBottom_toBottomOf="@+id/tv_finish"
            app:layout_constraintLeft_toRightOf="@id/tv_finish"
            android:text="예상도착시간 입니다"/>

        <LinearLayout
            android:id="@+id/layout_btnMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/block1" >

            <Button
                android:id="@+id/btnMinTime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="최소시간" />

            <Button
                android:id="@+id/btnMinCost"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:text="최소비용" />

            <Button
                android:id="@+id/btnMinTran"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="최소환승" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/btnMinCost"
            app:layout_constraintRight_toRightOf="@+id/btnMinTran"
            app:layout_constraintTop_toBottomOf="@+id/layout_btnMin">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="35dp"
                        android:src="@drawable/ic_yellow_circle" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="35dp"
                        android:src="@drawable/ic_sky_circle" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/layoverImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_green_circle"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintTop_toBottomOf="parent"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/startText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="출발역"
                        android:textSize="15sp"
                        tools:ignore="MissingConstraints"
                        android:layout_marginStart="10dp"/>


                    <TextView
                        android:id="@+id/layoverText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="경유역"
                        android:textSize="15sp"

                        tools:ignore="MissingConstraints" />


                    <TextView
                        android:id="@+id/arriveText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="도착역"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        tools:ignore="MissingConstraints"
                        android:layout_marginEnd="10dp"/>


                </LinearLayout>


            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세경로"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_test_route"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_img" />

        <TextView
            android:id="@+id/tv_test_route"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="경로결과 \n 101 - 303 - 304 - 305 (경로예시)"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_path" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>