<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="10">

        <ImageView
            android:id="@+id/search_change"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_change" />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="6">

            <EditText
                android:id="@+id/edit_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="출발지 입력"/>
            <EditText
                android:id="@+id/edit_stopover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="경유지 입력"/>
            <EditText
                android:id="@+id/edit_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="도착지 입력"/>
        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_search"
            app:layout_constraintLeft_toRightOf="@+id/layout_search" />
    </LinearLayout>
    
    <View
        android:id="@+id/block1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_search"
        android:background="@color/teal_200"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inform"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/block1" >
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:text="소요시간: "/>
        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_time"
            android:text="비용: " />
        <TextView
            android:id="@+id/tv_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_cost"
            android:textSize="20dp"
            android:text="환승횟수: "  />
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_transfer"
            android:textSize="20dp"
            android:text="출발시간: "  />
        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_start"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20dp"
            android:text="예상 도착시간: "  />
        <AutoCompleteTextView
            android:id="@+id/auto_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_time" />
        <AutoCompleteTextView
            android:id="@+id/auto_cost"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/auto_time"
            app:layout_constraintLeft_toRightOf="@id/tv_cost" />
        <AutoCompleteTextView
            android:id="@+id/auto_transfer"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/auto_cost"
            app:layout_constraintLeft_toRightOf="@id/tv_transfer" />
        <AutoCompleteTextView
            android:id="@+id/auto_start"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/auto_transfer"
            app:layout_constraintLeft_toRightOf="@id/tv_start" />
        <AutoCompleteTextView
            android:id="@+id/auto_finish"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/auto_start"
            app:layout_constraintLeft_toRightOf="@id/tv_finish" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>